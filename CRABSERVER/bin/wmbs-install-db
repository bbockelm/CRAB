#!/bin/sh 

#Call setup_mysql.sh to export DB variables
source $CRABSERVERBASE/bin/setup_mysql.sh

#Create wmbs database
mysql -u root --socket=$TESTDIR/mysqldata/mysql.sock --exec "${SQLCREATE}"
mysql -u root --socket=$TESTDIR/mysqldata/mysql.sock --exec "create database ${DBNAME}"
mysql -u root --socket=$TESTDIR/mysqldata/mysql.sock --exec "${GRANTSUPER}"

#Create wmbs DB tables
wmcore-db-init --config=WMCoreConfig.py --create --modules=WMCore.WMBS
wmcore-db-init --config=WMCoreConfig.py --create --modules=WMCore.MsgService
wmcore-db-init --config=WMCoreConfig.py --create --modules=WMCore.ThreadPool
wmcore-db-init --config=WMCoreConfig.py --create --modules=WMComponent.FeederManager.Database
wmcore-db-init --config=WMCoreConfig.py --create --modules=WMComponent.WorkflowManager.Database

