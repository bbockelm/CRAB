.PHONY:all install

# Things for python 2.6 
PYHOME=/afs/cern.ch/cms/sw/slc5_ia32_gcc434/external/python/2.6.4-cms
BOOST_HOME=/afs/cern.ch/cms/sw/slc5_ia32_gcc434/external/boost/1.40.0-cms

boost_cflags=-g -pthread -fPIC -I/usr/include/libxml2 \
	       -DBOOST_PYTHON_DYNAMIC_LIB -I$(BOOST_HOME)/include \
               -I$(PYHOME)/include/python2.4 -I. 

boost_libs=-lxml2 -lpthread -lpython2.4 \
             -L/opt/globus/lib -L$(BOOST_HOME)/lib -L$(PYHOME)/lib \
	     -Wl,-rpath-link,. -L$(PYHOME)/lib/python2.6/config/ -lboost_python

cli_objs = server2.o soapC.o soapServer.o stdsoap2.o

# building rules
.c.o: 
	gcc -c $(boost_cflags) $< -o $@

.cpp.o:
	g++ -c $(boost_cflags) $< -o $@

all: FrontendLoader_1_1.o $(cli_objs)
	g++ -o FrontendLoader_1_1.so -module -shared $(boost_libs) -L. -Wl,-R. FrontendLoader_1_1.o $(cli_objs)

install:
	echo "Installing server-side libs"
	mkdir -p ../bin/server
	cp FrontendLoader_1_1.so ../bin/server

clean:
	rm -f *.o  $(O_NAME) *.so

rebuild:
	clean all

