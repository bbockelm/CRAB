.PHONY:all install

# Things for python 2.4
LOCATION_I=-I/usr/include/boost -I/usr/include/python2.4
LOCATION_L=-lboost_python -lpython2.4

boost_cflags=-g -pthread -fPIC -I/usr/include/libxml2 -I. -DBOOST_PYTHON_DYNAMIC_LIB $(LOCATION_I)

boost_libs=-lxml2 -lpthread -Wl,-rpath-link,. $(LOCATION_L)

cli_objs = server2.o soapC.o soapServer.o stdsoap2.o

# building rules
.c.o: 
	gcc -c $(boost_cflags) $< -o $@

.cpp.o:
	g++ -c $(boost_cflags) $< -o $@

all: FrontendLoader_1_1.o $(cli_objs)
	gcc -o FrontendLoader_1_1.so -module -shared $(boost_libs) -L. -Wl,-R. FrontendLoader_1_1.o $(cli_objs)

install:
	echo "Installing server-side libs"
	mkdir -p ../bin/server
	cp FrontendLoader_1_1.so ../bin/server

clean:
	rm -f *.o  $(O_NAME) *.so

rebuild:
	clean all

